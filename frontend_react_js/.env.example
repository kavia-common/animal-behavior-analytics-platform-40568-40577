# Example environment variables for frontend (do not commit real secrets)
# Copy to .env and adjust as needed. The platform will inject values automatically.

# Optional: set a base path if the app is served under a subpath behind nginx (e.g., /frontend/)
REACT_APP_BASE_PATH=/

# Optional backend endpoints (not required; app uses mocks by default)
REACT_APP_API_BASE=
REACT_APP_BACKEND_URL=
REACT_APP_FRONTEND_URL=
REACT_APP_WS_URL=

# Optional settings
REACT_APP_NODE_ENV=development
REACT_APP_ENABLE_SOURCE_MAPS=true
REACT_APP_PORT=3000
REACT_APP_TRUST_PROXY=true
REACT_APP_LOG_LEVEL=info
REACT_APP_HEALTHCHECK_PATH=/healthz
REACT_APP_FEATURE_FLAGS={}
REACT_APP_EXPERIMENTS_ENABLED=false
