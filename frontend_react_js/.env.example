# Example environment variables for VizAI frontend (do not commit real secrets)
# Copy to `.env` and adjust as needed. The CI orchestrator will set actual values.

# Base URL for backend API. When unset, the app uses local mocks and relative '/api'.
REACT_APP_API_BASE=https://localhost:3001

# Optional: Alternative backend URL var supported by client
REACT_APP_BACKEND_URL=https://localhost:3001

# Frontend site URL (if needed by auth flows)
REACT_APP_FRONTEND_URL=http://localhost:3000

# WebSocket URL (currently not used; sockets are mocked)
REACT_APP_WS_URL=ws://localhost:3001

# Misc toggles
REACT_APP_NODE_ENV=development
REACT_APP_ENABLE_SOURCE_MAPS=true
REACT_APP_PORT=3000
REACT_APP_TRUST_PROXY=true
REACT_APP_LOG_LEVEL=info
REACT_APP_HEALTHCHECK_PATH=/health
REACT_APP_FEATURE_FLAGS={}
REACT_APP_EXPERIMENTS_ENABLED=false
